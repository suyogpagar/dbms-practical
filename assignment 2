VALUES (01, 05);

SELECT * FROM employee;
SELECT * FROM works;
SELECT * FROM company;
SELECT * FROM manages;


ALTER TABLE works
ADD salary INT;

SELECT * FROM works;

ALTER TABLE employee
DROP COLUMN street;

SELECT * FROM employee;

ALTER TABLE company
RENAME TO CMP;

SELECT * FROM CMP;
DROP TABLE manages;

ALTER TABLE employee
MODIFY city VARCHAR(20);

--view

CREATE VIEW EMPV2 AS
SELECT pname,city
FROM employee WHERE id = 1;

SELECT * FROM EMPV2;

--index

CREATE INDEX ind1 ON employee(pname);
SHOW INDEX ind1 FROM employee;



