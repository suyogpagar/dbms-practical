
CREATE TABLE Sailor (
    sid INTEGER PRIMARY KEY,
    sname VARCHAR(20),
    rating INTEGER,
    age REAL
);

CREATE TABLE Boat (
    bid INTEGER PRIMARY KEY,
    bname VARCHAR(20),
    color VARCHAR(10)
);

CREATE TABLE Reserves (
    sid INTEGER,
    bid INTEGER,
    day DATE,
    FOREIGN KEY (sid) REFERENCES Sailor(sid),
    FOREIGN KEY (bid) REFERENCES Boat(bid)
);


